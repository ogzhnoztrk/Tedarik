@using Tedarik.Entities.Concrete.Auth

@model Modul

@{
    ViewData["Title"] = "ModulUpsertAsync";
    Layout = "~/Views/Shared/_TedarikLayout.cshtml";
}

<h1>@(Model == null ? "Create" : "Update") Modül</h1>

<h4>Modul</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="ModulNo" class="control-label"></label>
                <input asp-for="ModulNo" class="form-control" />
                <span asp-validation-for="ModulNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModulAdi" class="control-label"></label>
                <input asp-for="ModulAdi" class="form-control" />
                <span asp-validation-for="ModulAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:150px">@(Model == null ? "Create" : "Update")</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>